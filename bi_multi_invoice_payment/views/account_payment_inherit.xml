<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_payment_form_view_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="amount" position="after">
                    <field name="total_payment_invoice" invisible="1"/>
                </field>
                <xpath expr="//sheet" position="inside">
                    <group attrs="{'invisible': ['|',('payment_difference', '=', 0.0),('total_payment_invoice','=',0.0)]}">
                        <group>
                            <label for="payment_difference"/>
                            <div>
                                <field name="payment_difference"/>
                                <field name="payment_difference_handling" widget="radio" nolabel="1"/>
                                <div attrs="{'invisible': [('payment_difference_handling','=','open')]}">
                                    <label for="writeoff_account_id" class="oe_edit_only" string="Post Difference In"/>
                                    <div name="writeoff_account_div" class="o_row">
                                        <field name="writeoff_account_id" string="Post Difference In" attrs="{'required': [('payment_difference_handling', '=', 'reconcile')]}"/>
                                        <field name="writeoff_amount" attrs="{'required': [('payment_difference_handling', '=', 'reconcile')]}"/>
                                    </div>
                                    <label for="writeoff2_account_id" class="oe_edit_only" string="Post Difference In"/>
                                    <div name="writeoff2_account_div" class="o_row">
                                        <field name="writeoff2_account_id" string="Post Difference In" attrs="{'required': [('writeoff2_amount', '>', 0.0)]}"/>
                                        <field name="writeoff2_amount"/>
                                    </div>
                                    <label for="journal_id" string="Journal" attrs="{'invisible': [('amount', '!=', 0)]}"/>
                                    <field name="journal_id" string="Journal" widget="selection" attrs="{'invisible': [('amount', '!=', 0)]}"/>
                                    <label for="writeoff_label" class="oe_edit_only" string="Label"/>
                                    <field name="writeoff_label" attrs="{'required': [('payment_difference_handling', '=', 'reconcile')]}"/>
                                </div>
                            </div>

                        </group>
                    </group>
                    <notebook>
                        <page name="payment_information" string="Payment Information">
                            <field name="invoice_payment_ids">
                                <tree string="Invoices" create="false" editable="bottom">
                                    <field name="invoice_id"/>
                                    <field name="account_id"/>
                                    <field name="date_invoice"/>
                                    <field name="date_due"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="amount_total"/>
                                    <field name="residual"/>
                                    <field name="allocation_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>