<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bi_config_settings_inherit_form_view" model="ir.ui.view">
        <field name="name">bi.config.settings.inherit.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container'][2]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">

                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Product Price Rate" for="prod_public_price_rate"
                                       class="col-lg-5 o_light_label"/>
                                <field name="prod_public_price_rate"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>