<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="merged_pickings_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Delivery Order</h1>
                        <hr/>
                        <table style="width:30%;">
                            <t t-if="doc.driver_id">
                                <tr>
                                    <td>
                                        <strong>Driver:</strong>
                                    </td>
                                    <td>
                                        <span t-field="doc.driver_id"/>
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td>
                                    <strong>Date:</strong>
                                </td>
                                <td>
                                    <span t-field="doc.date"/>
                                </td>
                            </tr>
                        </table>
                        <hr/>
                        <br/>
                        <h3>Sale Orders</h3>
                        <t t-set="i" t-value="1"/>
                        <div>
                            <ul>
                                <t t-foreach="doc.all_pickings" t-as="pick">
                                    <li class="list-inline-item">
                                        <span t-field="pick.origin"/>,
                                    </li>
                                </t>
                            </ul>
                        </div>
                        <hr/>
                        <br/>
                        <h3>Delivery Orders</h3>
                        <t t-set="i" t-value="1"/>
                        <div>
                            <ul>
                                <t t-foreach="doc.all_pickings" t-as="pick">
                                    <li class="list-inline-item">
                                        <span t-field="pick.name"/>,
                                    </li>
                                </t>
                            </ul>
                        </div>
                        <hr/>
                        <br/>
                        <h3>Products</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        <strong>Product</strong>
                                    </th>
                                    <th>
                                        <strong>Quantity</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="products" t-value="doc._get_products()"/>
                                <t t-foreach="products" t-as="product">
                                    <tr>
                                        <td>
                                            <span t-esc="product"/>
                                        </td>
                                        <td name="td_sched_date">
                                            <span t-esc="products[product]"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="text-right" style="position:absolute;top:950px; page-break-inside: avoid; width:85%;">
                             Signature: ..................
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report id="report_print_merger_pickings"
            model="stock.picking.merge"
            name="bi_pickings_report_merged.merged_pickings_template"
            file="bi_pickings_report_merged.merged_pickings_template"
            string="Pickings"
            report_type="qweb-pdf"/>

</odoo>